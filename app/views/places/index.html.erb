<h1>Welcome to my site to review Ski resorts!</h1>

<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<h1><%= place.name %></h1>
		<h2><%= place.state %>, <%= place.country %></h2>
		<i><%= place.address %></i><br /><br />
		<p><%= place.description %></p><br />
	</div>
<% end %>

<%= paginate @places %>